<!DOCTYPE html>
<html lang="en">

<head>
  <title>Quizzes - InquizitorApp</title>
  <%- include("partials/_imports.ejs") %>
  <script type="text/javascript" src="/scripts/home.js"></script>
</head>

<body>

  <%- include("partials/_header.ejs", {alerts, userData, currentPage, data: {}}) %>

  <main class="container d-flex flex-column flex-lg-row mt-lg-4">
    <!-- MAIN WINDOW (SPLIT) -->
    <div class="col-12 col-lg-8 m-auto">
      <section id="main-split" class="">
        <!-- MAIN CONTENT -->
        <div id="main-index">

          <!-- DEV LOG -->
          <h1 class="h3">Dev Log</h1>
          <div class="divider-h mt-1 mb-3"></div>

          <div id="dev-log" class="mb-3 mb-xl-4 console overflow-auto">

          <!-- CONSOLE -->

          <code id="console" class="d-flex flex-column align-items-start">

          </code>

          </div>

          <!-- FEATURED QUIZZES -->
          <h1 class="h3">Featured Quizzes</h1>
          <div class="divider-h mt-1 mb-3"></div>
          <div id="featured-quizzes" class="d-flex flex-column flex-xl-row">

              <% for (const quiz of quizData) { %>
                <a href="/quizzes/<%= quiz.id %> ">
                <div class="list-quiz col-12 flex-grow-1 flex-shrink-1"
                data-quiz-data="<%= JSON.stringify(quiz) %>">
                  <p class="title"><%= quiz.title %> </p>
                  <p class="description d-xl-none"><%= quiz.description %> </p>
                  <p class="author <%= quiz.is_admin ? "admin" : "" %> "><%= quiz.author %> </p>
                </div>
                </a>
              <% } %>

          </div>

        </div>
      </section>
    </div>

    <!-- SIDE PANELS (SPLIT) -->
    <div id="side-section" class="col-12 col-lg-4">
      <!-- USER PANEL -->
      <%- include("partials/_side_top.ejs", userData) %>
      <!-- LEADERBOARDS -->
      <%- include("partials/_side_bottom.ejs", rankData) %>
    </div>

  </main>

  <%- include("partials/_footer.ejs") %>

  <!-- EJS DATA -->
  <div id="ejs" data-quiz-data="<%= JSON.stringify(quizData) %>"></div>

</body>

</html>