          <ul class="navbar-nav d-flex flex-column flex-xl-row m-0 justify-content-xl-between w-100">

            <div id="app-links" class="d-flex flex-column flex-xl-row align-items-xl-center ml-lg-3">
              <!-- APP NAV LINKS (always shown) -->
              <li class="nav-item my-2 ml-xl-3"><a class="nav-link" href="/">HOME</a></li>
              <li class="nav-item my-2 ml-xl-3"><a class="nav-primary nav-link" href="/quizzes">ALL QUIZZES</a></li>

              <!-- APP NAV LINKS (shown if user is currently logged in)-->
              <% if (userData) { %>
                <li class="nav-item my-2 ml-xl-3"><a class="nav-blue nav-link" href="/quizzes/new">CREATE</a></li>
                <li class="nav-item my-2 ml-xl-3"><a class="nav-green nav-link" href="/study">STUDY</a></li>
