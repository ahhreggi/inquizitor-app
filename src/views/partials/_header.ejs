                    <!-- USER NAV LINKS (shown if user is currently not logged in) -->
                    <li class="nav-item my-2 ml-xl-3"><a class="nav-link" href="/login">LOGIN</a></li>
                    <li class="nav-item my-2 ml-xl-3"><a class="nav-primary nav-link" href="/register">REGISTER</a></li>

