<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Quiz App</title>
    <%- include("partials/_imports.ejs") %>
  </head>

  <body>

    <%- include("partials/_header.ejs") %>

    <main class="container d-flex flex-column flex-lg-row mt-lg-4">

      <!-- MAIN WINDOW (FULL) -->
      <div class="col-12">
        <section id="main-full" class="d-flex flex-column flex-lg-row align-content-between justify-content-lg-around">

          <!-- FORM -->
          <div class="col-lg-5">
              <h1 class="h3">Sign up - it's free!</h1>
              <form class="form" action="/register" method="POST">
                <div class="form-group mb-2">
                  <!-- USERNAME -->
                  <label for="username" class="form-label text-muted">Username</label>
                  <input class="form-control" type="text" name="username" required>
                  <!-- EMAIL -->
                  <label for="email" class="form-label text-muted mt-2">Email</label>
                  <input class="form-control" type="email" name="email" required>
                  <!-- PASSWORD -->
                  <label for="password" class="form-label text-muted mt-2">Password</label>
                  <!-- SUBMIT -->
                  <input class="form-control" type="password" name="password" required>
                  <button type="submit" class="btn btn-primary btn-block mt-5">Sign up</button>
                </div>
              </form>
            <p class="text-muted mt-4">Already have an account? <a class="tinyapp-link" href="/login">Log in</a>.</p>
          </div>
          <span class="divider d-none d-md-inline"></span>
          <div class="col-lg-5">
            <h1 class="h3">You'll get access to:</h1>
            <ul>
              <li>Feature 1</li>
              <li>Feature 1</li>
              <li>Feature 1</li>
              <li>Feature 1</li>
            </ul>
          </div>

        </section>
      </div>

      </main>

  <%- include("partials/_footer.ejs") %>

  </body>

</html>